<h1>Listing streams</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Campaign</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @streams.each do |stream| %>
  <tr>
    <td><%= stream.name %></td>
    <td><%= stream.campaign_id %></td>
    <td><%= link_to 'Show', stream %></td>
    <td><%= link_to 'Components', components_path(:stream_id => stream.id) %></td>
    <td><%= link_to 'Edit', edit_stream_path(stream) %></td>
    <td><%= link_to 'Destroy', stream, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

