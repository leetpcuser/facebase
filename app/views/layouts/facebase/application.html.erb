<!DOCTYPE html>
<html>
  <head>
    <title>Facebase</title>
    <%= stylesheet_link_tag    "facebase/application", :media => "all" %>
    <%= javascript_include_tag "facebase/application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="header">
      <h1>Facebase by davia-black</h1>
    </div>

    <div class="clear"></div>

    <div id="nav_wrapper">
      <div id="nav">
        <div id="table">
          <ul>
            <li>
              <a href="/facebase/campaigns/"><span>Campaigns</span></a>

              <% #<div class="subnav_wrapper">
                #<ul>
                #  <li><a href="#">Dummy Link</a></li>
                 # <li><a href="#">Dummy Link</a></li>
                #  <li><a href="#">Dummy Link</a></li>
               # </ul>
             # </div> %>
            </li>
          </ul>

          <div class="nav_divider"></div>

          <ul>
            <li><a href="/facebase/contacts/"><span>Contacts</span></a></li>
          </ul>

          <div class="nav_divider"></div>

          <ul>
            <li><a href="/facebase/email_service_providers/"><span>Email Service Providers</span></a></li>
          </ul>

          <div class="nav_divider"></div>

          <ul>
            <li><a href="/facebase/shards/"><span>Shards</span></a></li>
          </ul>
        </div>
      </div>
    </div>

    <div class="clear"></div>

    <div id="content_wrapper">
        <div id="content">
          <%
           if !@breadcrumbs.nil?
          %>

            <div id="breadcrumbs">
              <ul>
                <% @breadcrumbs.each_with_index do |breadcrumb, i| %>
                  <li>
                    <% if breadcrumb["link"] != '#'%><a href='<%=breadcrumb["link"]%>'><% end %>
                    <%=breadcrumb["name"]%>
                    <% if breadcrumb["link"] != '#'%></a><%
                  end

                  if i != @breadcrumbs.length - 1
                %>

                &gt;

                <% end %>
                  </li>
              <% end %>
            </ul>
          </div>

          <% end %>
          
          <%= yield %>
        </div>
    </div>

    <div class="clear"></div>

    <div id="footer">
      <div id="footer_content">
        Developed by Timothy Cardenas and Bryan Northey
      </div>

      <div class="clear"></div>
    </div>
  </body>
</html>
